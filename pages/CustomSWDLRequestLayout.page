<apex:page standardController="Custom_SWDL_Request__c" extensions="CustomSWDLRequestExtension" showHeader="true" showChat="false" sidebar="true" tabStyle="Custom_SWDL_Request__c">
    <apex:form >
        <apex:sectionHeader title="Custom SWDL Request Edit" subtitle="{!Custom_SWDL_Request__c.Name}" rendered="{!isEditPage}"/>
        <apex:sectionHeader title="Custom SWDL Request Edit" subtitle="New Custom SWDL Request" rendered="{!NOT(isEditPage)}"/>
        <apex:pageBlock title="Custom SWDL Request Edit" mode="edit">
            <apex:pageMessages />
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save" />
                <apex:commandButton action="{!saveAndNew}" value="Save & New" />
                <apex:commandButton action="{!cancel}" value="Cancel" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection collapsible="false">
                <apex:outputField value="{!Custom_SWDL_Request__c.Name}" rendered="{!isEditPage}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.End_User_Account__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.Requester__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.Sold_To_Account__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.When_Needed__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.Status__c}"/>
                <apex:outputField value="{!Custom_SWDL_Request__c.OwnerId}" rendered="{!isEditPage}"/>
                <apex:pageBlockSectionItem rendered="{!NOT(isEditPage)}">
                    <apex:outputText value="Owner"/>
                    <apex:outputText value="{!$User.FirstName} {!$User.LastName}"/>
                </apex:pageBlockSectionItem>
                <apex:inputField value="{!Custom_SWDL_Request__c.Notify_when_Request_Fulfilled__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Request Details" collapsible="false" columns="2">
                <apex:inputField value="{!Custom_SWDL_Request__c.Product__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.Target_Environment_Type__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.Detailed_Description__c}" required="true"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.Number_of_units_seats__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.License_Information__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.Version__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.OS__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="FTP Information" collapsible="false" columns="1">
                <apex:inputField value="{!Custom_SWDL_Request__c.FTP_User__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.FTP_Password__c}"/>
                <apex:inputField value="{!Custom_SWDL_Request__c.FTP_Comments__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Help Information" collapsible="false" columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputText value="{!$ObjectType.Custom_SWDL_Request__c.Fields.Help_Text1__c.Label}"/>
                    <apex:outputText value="{!$Label.CustomSwdlHelpText1}"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputText value="{!$ObjectType.Custom_SWDL_Request__c.Fields.User_Guide__c.Label}"/>
                    <apex:outputLink value="/servlet/servlet.FileDownload?file={!$Label.CustomSWDLUserGuideId}" target="_blank">
                        Click to open
                    </apex:outputLink>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>