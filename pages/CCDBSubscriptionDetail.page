<apex:page standardController="Subscription__c" sidebar="false" showHeader="false">
    <apex:form >  
		<apex:composition template="{!$Site.Template}">
			<apex:define name="header">
				<c:PartnerPortalHeader currPageName="nothomepage"/>
			</apex:define>
			<apex:define name="tabs">
					<c:PartnerPortalTabs tabname="optyTab" />
				</apex:define>
			<apex:define name="sidebar">
				<c:PartnerQuickLinks />
			</apex:define>
			<apex:define name="body">            
				<apex:pageBlock title="CCDB/Subscription">                 
					<apex:pageBlockSection columns="2" title="CCDB/Subscription Detail" collapsible="false" showHeader="true">                
						<apex:outputText label="CCDB/Subscription #" value="{!Subscription__c.Name}"/>                    
						<!--<apex:outputText label="Opportunity" styleClass="asideText" value="{!Subscription__c.Opportunity_LookUp__r.Name}"/>-->                             
						<apex:pageBlockSectionItem >
							<apex:outputLabel value="Opportunity" />
							<apex:outputLink value="/{!Subscription__c.Opportunity_LookUp__r.Id}" >{!Subscription__c.Opportunity_LookUp__r.Name}</apex:outputLink>                    
						</apex:pageBlockSectionItem>                    
						<apex:outputText label="Offering Type" value="{!Subscription__c.Offering_Type__c}"/>
						<apex:outputText label="Order" value="{!Subscription__c.Order__r.Name}"/>
						<!--<apex:pageBlockSectionItem >
							<apex:outputLabel value="Order" />
							<apex:outputLink value="/{!Subscription__c.Order__r.Id}" >{!Subscription__c.Order__r.Name}</apex:outputLink>                        
						</apex:pageBlockSectionItem>-->   
						<apex:outputText label="Account" value="{!Subscription__c.Account__r.Name}"/>
						<!--<apex:outputText label="Quote" value="{!Subscription__c.Quote__r.Name}"/>-->
						<apex:pageBlockSectionItem >
							<apex:outputLabel value="Quote" />
							<apex:outputLink value="/{!Subscription__c.Quote__r.Id}" >{!Subscription__c.Quote__r.Name}</apex:outputLink>                        
						</apex:pageBlockSectionItem>   
						<apex:outputText label="Sold To/Business Partner" value="{!Subscription__c.Business_Partner__r.Name}"/>                                                                                        
					</apex:pageBlockSection>                  
					
					<apex:pageBlockSection columns="2" title="Billing Information" collapsible="false" showHeader="true">                
						<apex:outputText label="Bill To" value="{!Subscription__c.Bill_To__r.Name}"/>
						<apex:outputText label="Term" value="{!Subscription__c.Term__c}"/>                        
						<apex:outputText label="Billing Category" value="{!Subscription__c.Billing_Category__c}"/>
						<apex:outputText label="Optional extended term length (Months)" value="{!Subscription__c.Optional_extended_term_length_Months__c}"/>
						<apex:outputText label="Billing Period" value="{!Subscription__c.Billing_Period__c}"/>
						<apex:outputText label="Term Length (Months)" value="{!Subscription__c.Term_Length_Months__c}"/>
						<apex:outputText label="Renewal Subscription Term" value="{!Subscription__c.Renewal_Subscription_Term__c}"/>
						<apex:outputText label="Start Date" value="{0,date,MM/dd/yyyy}"> <apex:param value="{!Subscription__c.Start_Date__c}"/> </apex:outputText>                            
						<apex:outputText label="Monthly Minimum" value="{!Subscription__c.Monthly_Minimum__c}"/> 
						<apex:outputText label="Ramp End Date" value="{0,date,MM/dd/yyyy}"> <apex:param value="{!Subscription__c.Ramp_End_Date__c}"/> </apex:outputText>
						<apex:outputText label="Ramp Period (Months)" value="{!Subscription__c.Ramp_Period__c}"/>                       
						<apex:outputText label="Subscription Term Start Date" value="{0,date,MM/dd/yyyy}"> <apex:param value="{!Subscription__c.Subscription_Start_Date__c}"/> </apex:outputText>
						<apex:outputText label="Bill To Emails" value="{!Subscription__c.Bill_To_Emails__c}"/>
						<apex:outputText label="Amendment Date" value="{0,date,MM/dd/yyyy}"> <apex:param value="{!Subscription__c.Amendment_Date__c}"/> </apex:outputText>                       
						<apex:outputText label="Payment Term" value="{!Subscription__c.Payment_Term__c}"/>
						<apex:outputText label="Subscription Term End Date" value="{0,date,MM/dd/yyyy}"> <apex:param value="{!Subscription__c.Subscription_End_Date__c}"/> </apex:outputText>                     
						<apex:outputText label="PO Number" value="{!Subscription__c.PO_Number__c}"/>
						<apex:outputText label="Comments" value="{!Subscription__c.Comments__c}"/>
					</apex:pageBlockSection>  
				</apex:pageBlock>
					
				<apex:pageBlock title="Subscription Products">
					<apex:facet name="header">
						&nbsp;&nbsp;<img src="/img/icon/custom51_100/ship32.png"/> <h2 style = "color: #4e4e4e; font-size: 1.3em;">
						&nbsp;Subscription Products
						</h2> 
					</apex:facet>
					<apex:pageBlockTable value="{!Subscription__c.Subscription_Products__r}" var="cont" headerClass="Subscription Products"
										 title="Subscription Products">
						<apex:column value="{!cont.Name}" />
						<!--apex:column headerValue="Product" value="{!cont.Product__r.Name}"></apex:column-->
                        <apex:column value="{!cont.Product__r.Name}"></apex:column>
						<apex:column value="{!cont.APN_Number__c}" />
						<apex:column value="{!cont.Product_Quantity__c}" />
						<apex:column value="{!cont.List_Price__c}" />
						<apex:column value="{!cont.Partner_Price__c}" />
						<apex:column value="{!cont.Net_Unit_Price__c}" />
						<apex:column value="{!cont.Ext_Net_Price__c}" />
						<apex:column value="{!cont.Is_Overage__c}" />
					</apex:pageBlockTable> 
				</apex:pageBlock>
			</apex:define>                
		</apex:composition>   
	</apex:form>	
</apex:page>