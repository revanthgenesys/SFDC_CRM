<apex:page standardController="Consume_Service__c" extensions="consumeSrvOwnerChng" tabStyle="Consume_Service__c" title="Ownership Edit: {!consumeServRec.Name}">
    <apex:form >
        <apex:sectionHeader subtitle="{!consumeServRec.Name}" title="{!$objectType.Consume_Service__c.labelplural}"/>
        This screen allows you to transfer a consume service from one user to another.
        <apex:pageBlock tabStyle="Consume_Service__c" title="Select New Owner">   
            <apex:pageBlockSection columns="1"> 
                <h6>Transfer this consume service   {!consumeServRec.Name}</h6>
                <apex:inputfield value="{!consumeServRec.OwnerId}" label="Owner"/>
                <!--<apex:inputcheckbox value="{!IF(1=1, true,false)}"/>-->
                <apex:inputCheckbox value="{!sendNotification}" label="Send Notification Email" />
                <apex:pageBlockSectionItem helpText="Multiple email addresses should be de-limited with semi-colon">
                    <apex:outputText value="Additional Emails" />
                    <apex:inputTextArea value="{!additionalEmails}" label="Additional Emails" />
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="Save" action="{!saveCSRec}"/>
                <apex:commandButton value="Cancel" action="{!cancelCSRec}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>