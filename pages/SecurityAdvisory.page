<script type="text/javascript">
    var Synapse = Synapse || {};
    Synapse.demandbaseGA = {
        key: '4d05844bda53196a4e04ac1690f598b82312493f',
        /* Customize which variables are sent to GA. 'fields' must be a Demandbase variable name */
        fields: ["company_name", "sub_industry", "revenue_range", "audience", "watch_list_account_status"],
        track: function (data) {
            try {
                data = Synapse.demandbaseGA._flatA(data);
                for (field in Synapse.demandbaseGA.fields) {
                    var fieldLabel = Synapse.demandbaseGA.fields[field];
                    var fieldValue = data[Synapse.demandbaseGA.fields[field]] || '';
                    if (fieldLabel == 'audience') {
                        seg = data['audience_segment'] || '';
                        if (seg !== '') {
                            fieldValue = fieldValue + ' : ' + seg;
                        }
                    } else if (fieldLabel == 'company_name') {
                        var b2bFlag = data['b2b'] || '';
                        var b2cFlag = data['b2c'] || '';
                        if (b2bFlag == true) {
                            fieldValue = fieldValue + ' (b2b)';
                        }
                        if (b2cFlag == true) {
                            fieldValue = fieldValue + ' (b2c)';
                        }
                    } else if (fieldLabel == 'watch_list_account_status') {
                        if (fieldValue == '') {
                            fieldValue = '(Not in Watch List)';
                        }
                        var isG1 = data['watch_list_is_g1_target'];
                        if (isG1 == true) {
                            fieldValue = fieldValue + ' (G1)';
                        }
                    }
                    Synapse.demandbaseGA._var((parseInt(field) + 1),
                Synapse.demandbaseGA._cA(Synapse.demandbaseGA._toPC(fieldLabel)), fieldValue, 1);
                    Synapse.demandbaseGA._logE('Custom Var' + parseInt(field) + ' : ' + fieldLabel + ' : ' + fieldValue);
                }
                Synapse.demandbaseGA._event();
            } catch (e) { Synapse.demandbaseGA._logE('Integration Error: ' + e) };
        },
        load: function () {
            try {
                if (!window._gaq) window._gaq = [];
                var db = document.createElement('script'); db.type = 'text/javascript'; db.async = true;
                db.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'api.demandbase.com/api/v2/ip.json?key=' + this.key + '&callback=Synapse.demandbaseGA.track&page=' + document.URL + '&referrer=' + document.referrer;
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(db, s);
                _gaq.push(['_addDevId', 'NE7T9']);
                Synapse.demandbaseGA._logE('Loaded Script ' + db.src);
            } catch (e) { this._logE('Script Error: ' + e) };
        },
        _cA: function (s) {
            var al = ['IP', 'SID', 'HQ', 'DMA', 'ISP'];
            for (a in al) {
                s = s.replace(new RegExp(al[a], 'ig'), al[a])
            } return s;
        },
        _flatA: function (a) {
            for (d in a) {
                if (typeof a[d] == 'object') {
                    for (cd in a[d]) { a[d + '_' + cd] = a[d][cd] };
                    delete a[d];
                }
            };
            return a;
        },
        _logE: function (m) { if (console.log) console.log('DB GA ' + m); },
        _toPC: function (s) {
            return s.replace(/_/g, ' ').replace(/\w\S*/g, function (t) { return t.charAt(0).toUpperCase() + t.substr(1).toLowerCase() });
        },
        _p: function (t, v1, v2, v3, v4, v5) { window._gaq.push([t, v1, v2, v3, v4, v5]); },
        _var: function (i, k, v, s) { this._p('_setCustomVar', i, k, v, s); },
        _event: function () { this._p('_trackEvent', 'Demandbase', 'API Resolution', 'IP API', 0, 1); }
    };
    Synapse.demandbaseGA.load();
</script>
