<apex:page standardController="Case" extensions="cloud_attachment_class" showHeader="false" sidebar="false">
 <apex:pageBlock rendered="{!AND(NOT(ISNULL(atmtList)),atmtList.size>0)}">
   <apex:pageBlockTable value="{!atmtList}" var="eachRow">
   
   <apex:column headerValue="Action">
   <a href="https://ssl.salesforce.com/startURL={!eachRow.Attachment_Id__c}/e?retURL=%2F{!eachRow.Parent_Id__c }" class="actionLink" title="Edit - Record 1 - Attachment">Edit</a>&nbsp;|&nbsp;
   <a href="https://ssl.salesforce.com?startURL={!eachRow.Attachment_Id__c}" class="actionLink" target="_top" title="View - Record 1 - Attachment">View</a>&nbsp;|&nbsp;
   </apex:column>
   <apex:column headerValue="Title">{!eachRow.Attachment_Name__c}</apex:column>
   <apex:column headerValue="Created Date">{!eachRow.Created_Date__c}</apex:column>
   <apex:column headerValue="Created By">{!eachRow.Created_By__c}</apex:column>   
   </apex:pageBlockTable>
   </apex:pageBlock> 
  
   <apex:pageBlock rendered="{!OR(ISNULL(atmtList),atmtList.size=0)}">
   No records to display
   </apex:pageBlock>
</apex:page>