<apex:page controller="articleRedirectController">

<div id="__redirect_errorMessage" style='color:red'></div>

<script type="text/javascript">
	if( {!validRedirect} ) {
		window.location = "{!redirectUrl}";
	} else {
		document.getElementById("__redirect_errorMessage").innerHTML = "No valid redirect for article found";
	}
</script>
{!redirectUrl}
</apex:page>